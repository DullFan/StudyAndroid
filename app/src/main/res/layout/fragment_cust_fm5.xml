<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".study.customizeview.cust_fm5.CustFm5"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.studyandroid.study.customizeview.cust_fm5.DragHelperGridView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/avatarView"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/logoView"
            android:src="@drawable/rv_img10"
            android:layout_height="120dp"
            android:contentDescription="AvatarView"/>

        <ImageView
            android:id="@+id/logoView"
            android:layout_width="0dp"
            app:layout_constraintLeft_toRightOf="@id/avatarView"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/rv_img12"
            android:layout_height="120dp"
            android:contentDescription="Logo"/>

        <LinearLayout
            android:id="@+id/collectorLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#78909C"
            android:orientation="horizontal" />

    </com.example.studyandroid.study.customizeview.cust_fm5.DragHelperGridView>

</LinearLayout>