                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="悬停二号"
                android:padding="10dp"
                android:textColor="@color/red"
                android:gravity="center"/>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

