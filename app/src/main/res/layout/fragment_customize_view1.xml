<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".study.customizeview.cust_fm1.CustomizeViewFragment1">


        <com.example.studyandroid.study.customizeview.cust_fm1.CustomizeViewFragmentUi1
            android:id="@+id/customize_view1_ui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="江河的奇妙思想"
            app:changeColor="@color/testColor2"
            app:originColor="@color/testColor3"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/customize_view1_ui">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/customize_view1_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="从左到右" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/customize_view1_button2"
                android:layout_width="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_height="wrap_content"
                android:text="从右到走" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>